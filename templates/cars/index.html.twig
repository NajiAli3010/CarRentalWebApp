{% extends 'base.html.twig' %}

{% block title %}Hello CarsController!{% endblock %}

{% block body %}

    <!-- ***** Main Banner Area Start ***** -->
    <div class="main-banner" id="top">
        <video autoplay muted loop id="bg-video">
            <source src="assets/images/video.mp4" type="video/mp4"/>
        </video>

        <div class="video-overlay header-text">
            <div class="caption">
                <h2><em>Rent a car</em> at low prices</h2>

            </div>
        </div>
    </div>

    <!-- ***** Main Banner Area End ***** -->

    <!-- ***** Offers Starts ***** -->
    <section class="section" id="trainers">
        <div class="container">
            <div class="row">
                <div class="col-lg-6 offset-lg-3">
                    <div class="section-heading">
                        <h2>Check our <em>Offers</em></h2>
                        <img src="assets/images/line-dec.png" alt="">
                        <p></p>
                    </div>
                </div>
            </div>
            <div class="row">
                {% for car in cars %}
                    <div class="col-lg-4 col-md-4">
                        <div class="trainer-item">
                            <div class="image-thumb">
                                <img  class="img_car" src="{{ car.photo }}" alt="">
                            </div>
                            <div class="down-content">
                                <span>from {{ car.price }} per weekend</span>
                                <h4> {{ car.color }} {{ car.brand }} {{ car.model }}</h4>
                                <p>{{ car.description }}</p>
                                <ul class="social-icons">
                                </ul>
                            </div>
                        </div>
                    </div>
                {% endfor %}
            </div>

            <br>

            <div class="main-button text-center">
                <a href="{{ path('app_offers') }}">See Our Offers</a>
            </div>
        </div>
    </section>
    <!-- ***** Offers Ends ***** -->

    <!-- ***** Call to Action Start ***** -->
    <section class="section section-bg" id="call-to-action"
{#             style="background-image: url(assets/images/banner-image-1-1920x500.jpg)">#}
        <div class="container">
            <div class="row">
                <div class="col-lg-10 offset-lg-1">
                    <div class="cta-content">
                        <h2>Send us a <em>message</em></h2>
                        <p></p>
                        <div class="main-button">
                            <a href="{{ path('app_contact') }}">Contact us</a>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </section>
    <!-- ***** Call to Action End ***** -->

    <!-- ***** Testimonials Item Start ***** -->

    <!-- ***** Testimonials Item End ***** -->

    <!-- ***** Footer Start ***** -->
    <footer>
        <div class="container">
            <div class="row">
                <div class="col-lg-12">

                </div>
            </div>
        </div>
    </footer>
{% endblock %}
