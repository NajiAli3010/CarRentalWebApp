{% extends 'base.html.twig' %}

{% block body %}

    <div id="booking" class="section">
        <div class="section-center">
            <div class="container">
                <div class="row">
                    <div class="booking-form">
                        <div class="form-header">
                            <h1>Book a car</h1>
                        </div>
                        <form action="{{ path('app_check_out', {'id':cars.id}) }}" method="post">
                            <div class="form-group">
                                <span class="form-label">Pickup Location</span>
                                <select name="location" class="form-control">
                                    <option> Ulitsa Karla Marksa </option>
                                    <option> Ulitsa Dzerzhinskogo,3  </option>
                                    <option> Komsomol'skaya Ulitsa   </option>
                                    <option> Druzhinnaya Ulitsa,7 </option>
                                    <option> Ulitsa Latyshskikh Strelkov,3 </option>
                                    <option> Ulitsa Petra Polushkina </option>
                                </select>
                                <span class="select-arrow"></span>
                            </div>
                            <div class="row">
                                <div class="col-sm-6">
                                    <div class="form-group">
                                        <span class="form-label">Pickup Date</span>
                                        <input name="pick" class="form-control" type="datetime-local" required>
                                    </div>
                                </div>
                                <div class="col-sm-6">
                                    <div class="form-group">
                                        <span class="form-label">Return Date</span>
                                        <input name="return" class="form-control" type="datetime-local" required>
                                    </div>
                                </div><div class="col-sm-6">
                                    <div class="form-group">
                                        <span class="form-label">amount</span>
                                        <input name="amount" class="form-control" type="number" required>
                                    </div>
                                </div>
                            </div>
                            <div class="form-btn">
                                <button class="submit-btn" type ="submit"  ><a href="{{ path('app_check_out', {'id': 'x'}) }}"></a>Book Now</button>
                            </div>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>


{% endblock %}

