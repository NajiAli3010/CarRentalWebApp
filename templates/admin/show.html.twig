{% extends 'base.html.twig' %}

{% block title %}Car{% endblock %}

{% block body %}
        <div class="show" style="margin-top: 5rem">

            <h1>Car</h1>

            <table class="table">
                <tbody>
                <tr>
                    <th>Id</th>
                    <td>{{ car.id }}</td>
                </tr>
                <tr>
                    <th>Brand</th>
                    <td>{{ car.brand }}</td>
                </tr>

                <tr>
                    <th>Model</th>
                    <td>{{ car.model }}</td>
                </tr>
                <tr>
                    <th>Description</th>
                    <td>{{ car.description }}</td>
                </tr>
                <tr>
                    <th>Color</th>
                    <td>{{ car.color }}</td>
                </tr>
                <tr>
                    <th>Price</th>
                    <td>{{ car.price }}</td>
                </tr>

                <tr>
                    <th>Photo</th>
                    <td>
                        <img src="{{ car.photo }}" style="width: 10rem; height: 10rem">
                    </td>

                </tr>
                </tbody>
            </table>

            <a href="{{ path('app_admin_index') }}" class="back_to_list">back to list</a>

            <a class="edit_button" href="{{ path('app_admin_edit', {'id': car.id}) }}">edit</a>

            {{ include('admin/_delete_form.html.twig') }}

        </div>

{% endblock %}
